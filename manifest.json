{

  "manifest_version": 2,
  "name": "Add To Miniflux",
  "version": "1.0",

  "description": "Add current page to Miniflux feed reader.",
  "homepage_url": "https://github.com/skatkov/add-to-miniflux-webextension",
  "icons": {
    "32": "icons/miniflux-48.png",
    "48": "icons/miniflux-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["add-to-miniflux.js"]
  },

  "browser_action": {
    "default_icon": "icons/miniflux-32.png",
    "default_title": "Add To Miniflux"
  }

}
